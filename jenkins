pipeline {
    agent any
    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/user/static-site.git'
            }
        }
        stage('Build Docker Image') {
            steps {
                sh 'docker build -t static-site .'
            }
        }
        stage('Deploy Container') {
            steps {
                sh 'docker run -d -p 80:80 static-site'
            }
        }
    }
}
